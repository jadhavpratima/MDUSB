<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="10dp"
    tools:context=".Free">


    <Button
        android:id="@+id/freestatus"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/GreenYellow"
        android:fontFamily="@font/cantora_one"
        android:padding="10dp"
        android:text="Status"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/freeamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/freestatus"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cantora_one"
        android:text="0"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="50sp" />



    <ImageView
        android:id="@+id/freeqr"
        android:layout_width="400dp"
        android:layout_height="370dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/Red"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/cantora_one"
        android:padding="10dp"
        android:text="Cancel Payment"
        android:textColor="@color/white"
        android:textSize="45sp" />

   <!-- <ImageView
        android:id="@+id/c_logo"
        android:layout_width="240dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/c_logo" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cantora_one"
            android:text="Your Order is : "
            android:textColor="@color/black"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cantora_one"
            android:text=""
            android:textColor="@color/black"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cantora_one"
            android:text="ml"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="50sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/rs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/cantora_one"
        android:text="\u20B9"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/rs"
        android:fontFamily="@font/cantora_one"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="50sp" />




    <TextView
        android:id="@+id/scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cantora_one"
        android:text="Scan QR Code"
        android:textColor="#2D592F"
        android:textSize="45sp" />

    <ImageView
        android:id="@+id/qr"
        android:layout_width="400dp"
        android:layout_height="370dp"
        android:layout_below="@id/scan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/pointing"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/pointing" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/Red"
        android:fontFamily="@font/cantora_one"
        android:padding="10dp"
        android:text="Cancel Payment"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/upi_payments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cantora_one"
        android:gravity="center"
        android:text="Use any bank UPI payment"
        android:textColor="@color/Black"
        android:textSize="40dp" />

    <Button
        android:id="@+id/status"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/GreenYellow"
        android:fontFamily="@font/cantora_one"
        android:padding="10dp"
        android:text="Status"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <LinearLayout
        android:id="@+id/linearr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upi_payments"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gpay"
            android:layout_width="150dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/gpay" />

        <ImageView
            android:id="@+id/amazon"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/amazon" />


        <ImageView
            android:id="@+id/phonepay"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/phonepe" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearr"
        android:layout_alignLeft="@id/linearr"
        android:layout_alignRight="@id/linearr"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/paytm"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="85dp"
            app:srcCompat="@drawable/paytm" />

        <ImageView
            android:id="@+id/bharat"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/upi" />


    </LinearLayout>

    <TextView
        android:id="@+id/merchant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />-->

</RelativeLayout>