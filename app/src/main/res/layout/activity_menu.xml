<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/md_back"
    tools:context=".Menu">

    <ImageView
        android:id="@+id/home"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/home" />


    <ImageView
        android:id="@+id/bottle"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/c_logo" />




    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:weightSum="9">


        <LinearLayout
            android:id="@+id/cowlinear1"
            android:layout_width="265dp"
            android:layout_height="400dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                app:srcCompat="@drawable/cow" />

            <TextView
                android:id="@+id/cow1_ml"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1 Litr"
                android:textColor="#00BCD4"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu1_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Cow Milk"
                android:textColor="#06569B"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu1_rate"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Rs"
                android:textColor="#00BCD4"
                android:textSize="35sp"
                android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/cowlinear2"
            android:layout_width="265dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/c2"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/cow" />

            <TextView
                android:id="@+id/cow2_ml"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="500 ml"
                android:textColor="#00BCD4"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu2_name"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Cow Milk"
                android:textColor="#06569B"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu2_rate"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:background="@color/zxing_transparent"
                android:gravity="center"
                android:text="Rs"
                android:textColor="#00BCD4"
                android:textSize="35sp"
                android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/cowlinear3"
            android:layout_width="265dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:paddingTop="40dp">

            <ImageView
                android:id="@+id/c3"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/cow" />

            <TextView
                android:id="@+id/cow3_ml"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="250 ml"
                android:textColor="#00BCD4"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu3_name"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Cow Milk"
                android:textColor="#06569B"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu3_rate"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Rs"
                android:textColor="#00BCD4"
                android:textSize="35sp"
                android:textStyle="bold" />



        </LinearLayout>

    </LinearLayout>

    <!--        <ImageView
                android:id="@+id/cow2"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                app:srcCompat="@drawable/cowmilk_med" />

            <ImageView
                android:id="@+id/cow3"
                android:layout_width="200dp"
