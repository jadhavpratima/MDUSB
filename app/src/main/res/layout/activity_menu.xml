                android:gravity="center"
                android:text="Rs"
                android:textColor="#FF9800"
                android:textSize="35sp"
                android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/buffalolinear2"
            android:layout_width="265dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/buffalo" />

            <TextView
                android:id="@+id/buffalo2_ml"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="500 ml"
                android:textColor="#FF9800"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu5_name"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Buffalo Milk"
                android:textColor="#6D483F"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu5_rate"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:background="@color/zxing_transparent"
                android:gravity="center"
                android:text="Rs"
                android:textColor="#FF9800"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buffalolinear3"
            android:layout_width="265dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:paddingTop="70dp">

            <ImageView
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"

                app:srcCompat="@drawable/buffalo" />

            <TextView
                android:id="@+id/buffalo3_ml"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="250 ml"
                android:textColor="#FF9800"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu6_name"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Buffalo Milk"
                android:textColor="#6D483F"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu6_rate"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Rs"
                android:textColor="#FF9800"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/dish_name"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <TextView
        android:id="@+id/price"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_above="@id/confirm"
        android:layout_marginLeft="330dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="Rs : "
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/menutotal"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_above="@id/confirm"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="0"
        android:layout_toRightOf="@id/price"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#00BCD4"
        android:fontFamily="@font/cantora_one"
        android:padding="15dp"
        android:text="Confirm"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:visibility="visible" />
</RelativeLayout>